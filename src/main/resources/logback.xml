<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>

	<property name="LOG_HOME"
		value="/home/dev/npimpale/CustomerPoc/logs" />

	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				<!-- %d{ISO8601} %-4relative [%thread] %-5level %logger{36}.%M\(%line\) 
					-%msg%n -->
				%d{ISO8601} %-4relative [%thread] %-5level %logger{36} -%msg%n
			</Pattern>
		</layout>
	</appender>

	<appender name="APP-LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_HOME}/customer-service-app.log</file>
		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>
				<!-- %d{ISO8601} %-4relative [%thread] %-5level %logger{36}.%M\(%line\) 
					-%msg%n -->
				%d{ISO8601} %-4relative [%thread] %-5level %logger{36} -%msg%n
			</Pattern>
		</encoder>
		<!-- Roll over daily -->
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/archived/customer-service-app.%d{yyyy-MM-dd}.log
			</fileNamePattern>
		</rollingPolicy>
	</appender>

	<!-- Send logs to file -->
	<logger name="com.synechron.blockchain" level="DEBUG"
		additivity="false">
		<appender-ref ref="APP-LOG" />
		<appender-ref ref="STDOUT" />
	</logger>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="APP-LOG" />
	</root>
</configuration>
